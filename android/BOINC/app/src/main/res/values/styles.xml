<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullscreenTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <color name="black_overlay">#000000</color>

    <style name="mTheme" parent="android:Theme.Holo.NoActionBar" />

    <style name="LFeedbackLayerWidth">
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="MainWindowArrangement">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ViewGraphicTopShadow">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ParameterRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_parameter_row</item>
    </style>

    <style name="FirstColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SecondColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:text">@string/p_kb</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ThirdColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:gravity">right</item>
        <item name="android:text">@string/p_percentage</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuEntryIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:alpha">0.4</item>
    </style>

    <style name="MenuEntryText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/VeryDarkGray</item>
    </style>

    <style name="CBParameters">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="TVInterval">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SBInterval">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:max">3</item>
    </style>
</resources>